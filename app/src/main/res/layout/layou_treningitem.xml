<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/parent_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/bildeTrening"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_below="@id/ovelseId"/>

    <TextView
        android:id="@+id/ovelseId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ã˜velse"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/setTrening"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Set:"
        android:layout_toRightOf="@id/bildeTrening"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/setTall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_toRightOf="@id/setTrening"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:inputType="number|phone"
        android:digits="0123456789"
        android:maxLength="2"
        />

    <TextView
        android:id="@+id/repsTrening"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Reps:"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/setTall"
        android:layout_marginLeft="25dp"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/repsTall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_toRightOf="@id/repsTrening"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:inputType="number|phone"
        android:digits="0123456789"
        android:maxLength="2"

/>

    <TextView
        android:id="@+id/vektTrening"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Vekt:"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/repsTall"
        android:layout_marginLeft="25dp"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/vektTall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_toRightOf="@id/vektTrening"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:inputType="number|phone"
        android:digits="0123456789"
        android:maxLength="3"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/knappSlett"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/vektTall"
        android:text="X"
        android:layout_centerVertical="true"
        app:backgroundTint="#DF0101" />
</RelativeLayout>